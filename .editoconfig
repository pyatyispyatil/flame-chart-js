# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 4

[*.json]
indent_size = 4

[*.{css,scss,sass}]
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 4

